<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Турбаза - Вигридр </title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link href="~/Content/nivo-lightbox.css" rel="stylesheet" />
    <link href="~/Content/nivo-lightbox-theme/default/default.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/owl.carousel.css" rel="stylesheet" media="screen" />
    <link href="~/Content/owl.theme.css" rel="stylesheet" media="screen" />
    <link href="~/Content/animate.css" rel="stylesheet" />
    <link href="~/Content/style.css" rel="stylesheet">
    <link href="~/color/default.css" rel="stylesheet">
</head>
<body id="page-top" data-spy="scroll" data-target=".navbar-custom">
        <!-- Preloader -->
        <div id="preloader">
            <div id="load"></div>
        </div>

        <!-- Section: intro -->
        <section style="background-attachment: fixed;" id="intro" class="intro">

            <div class="slogan">
                <a href="@Url.Action("Index","Home")"><img src="~/img/logo.png" alt="" /></a>
            </div>
            <div class="page-scroll">
                <a href="#about">
                    <i class="fa fa-angle-down fa-5x animated"></i>
                </a>
            </div>
        </section>
        <!-- /Section: intro -->
        <!-- Navigation -->
        <div id="navigation">
            <nav class="navbar navbar-custom" role="navigation">
                <div class="container">
                    <div class="row">
                        <div class="col-md-10 col-md-offset-2">

                            <!-- Brand and toggle get grouped for better mobile display -->
                            <div class="navbar-header">
                                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#menu">
                                    <i class="fa fa-bars"></i>
                                </button>
                                <h1><a href="#intro" style="font-size: 17px; letter-spacing: 1px; color: #444; text-transform: uppercase; font-weight: 800;">Вигридр</a></h1>
                            </div>
                            <!-- Collect the nav links, forms, and other content for toggling -->
                            <div class="collapse navbar-collapse" id="menu">
                                <ul class="nav navbar-nav">
                                    <li class="active"><a href="#intro">Главная</a></li>
                                    <li><a href="#about">О нас</a></li>
                                    <li><a href="#gallery">Галерея</a></li>
                                    <li><a href="#contact">Связаться</a></li>
                                </ul>
                            </div>
                            <!-- /.Navbar-collapse -->

                        </div>
                    </div>
                </div>
                <!-- /.container -->
            </nav>
        </div>
        <!-- /Navigation -->

        <!-- /Section: contact -->
    @RenderBody()
    <section id="separator" class="home-section parallax text-center" data-stellar-background-ratio="0.5" style="background-size: cover; padding-bottom: 30px; padding-top:30px">

        <div class="container">
            <div class="row">
                <div style="color:white" class="col-md-12 col-lg-12">
                    <p>&copy; 2015 - 2017 гг. «Вигридр»</p>
                    <p>Украина, Днепропетровская обл.</p>
                </div>
            </div>
        </div>
    </section>


        @*@Scripts.Render("~/bundles/jquery")*@
    <script src="~/Scripts/jquery.min.js"></script>
    @*<script src="~/Scripts/jquery-3.1.1.js"></script>*@
        @Scripts.Render("~/bundles/bootstrap")
        <script src="~/Scripts/jquery.easing.min.js"></script>
        <script src="~/Scripts/jquery.sticky.js"></script>
        <script src="~/Scripts/jquery.scrollTo.js"></script>
        <script src="~/Scripts/stellar.js"></script>
        <script src="~/Scripts/wow.min.js"></script>
        <script src="~/Scripts/owl.carousel.min.js"></script>
        <script src="~/Scripts/nivo-lightbox.min.js"></script>
        <!-- Custom Theme JavaScript -->
        <script src="~/Scripts/custom.js"></script>
        @RenderSection("scripts", required: false)
    </body>
</html>
